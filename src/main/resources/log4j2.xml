<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %logger{36}%n[%-5level] %msg%n"/>
        </Console>
        <RollingRandomAccessFileAppender name="BotFile" fileName="logs/bot.log" filePattern="logs/bot_%i.log"
                                         append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %logger{36}%n[%-5level] %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFileAppender>
        <RollingRandomAccessFileAppender name="ApiFile" fileName="logs/api.log" filePattern="logs/api_%i.log"
                                         append="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %logger{36}%n[%-5level] %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFileAppender>
    </Appenders>
    <Loggers>
        <Logger name="VahrhedralBot" level="trace" additivity="false">
            <AppenderRef ref="Console" level="info"/>
            <AppenderRef ref="BotFile" level="debug"/>
        </Logger>
        <Logger name="DiscordApiClient" level="trace" additivity="false">
            <AppenderRef ref="Console" level="info"/>
            <AppenderRef ref="ApiFile" level="debug"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
